<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">


      <h2 class="mt-5" style="text-align: center">ユーザー　一覧</h2>
      <table class="table">
      
       <thead>
        <tr>
      
            <th>プロフィール画像</th>
            <th>ユーザーネーム</th>
            <th colspan="3"></th>
      
        </tr>
       </thead>
      
        <tbody>
         <% @customers.each do |customer| %>
          
          <tr>
           
          <div><td><%= image_tag customer.get_profile_image(100,100) %></td></div>
            <td><%= customer.name %></td>
            <td><%= link_to '詳細', admin_customer_path(customer.id) %></td>
      
          </tr>
          
         <% end %>
        </tbody>
      </table>


    </div>
  </div>
</div>