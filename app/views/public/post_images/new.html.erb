<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>


      <h2 style="text-align: center; margin-top: 30px;">投稿フォーム</h2>
      
      <div class="border rounded p-5 m-5", style="background-color: white; width: 500px;">
      <%= form_with model: @post_image do |f| %>
        <div>
        <h4>画像</h4>
        <%= f.file_field :image, accept: "image/*" %>
        <h4 class="mt-5">タイトル</h4>
        <%= f.text_field :title %>
        <h4 class="mt-5">内容</h4>
        <%= f.text_area :body %>
        <%= f.submit '投稿' %>
      <% end %>
        </div>
      </div>


    </div>
  </div>
</div>