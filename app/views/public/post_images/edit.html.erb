<!--中央よせ-->
<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>


       <h1 style="text-align: center; margin-top: 30px;">投稿編集</h1>

       <div class="border rounded p-5 m-5", style="background-color: white;">

      <%= form_with model: @post_image do |f| %>

        <h4>画像</h4>
        <%= f.file_field :image, placeholder: "画像", accept: "image/*" %>

        <h4 class="mt-5">タイトル</h4>
        <%= f.text_field :title %>

        <h4 class="mt-5">内容</h4>
        <%= f.text_area :body %>

        <%= f.submit '保存' %>

      <% end %>

      </div>


    </div>
  </div>
</div>