<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>


      <h1>編集画面</h1>
      
      <%= form_with model: @post_image do |f| %>
      
        <h4>画像</h4>
        <%= f.file_field :image, placeholder: "画像", accept: "image/*" %> 
      
        <h4>タイトル</h4>
        <%= f.text_field :title %>
        
        <h4>内容</h4>
        <%= f.text_area :body %>
        
        <%= f.submit '保存' %>
        
      <% end %>


    </div>
  </div>
</div>