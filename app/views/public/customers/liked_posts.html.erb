<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="headline mt-5 ml-5">いいねした投稿</h4>
        <div class="row mt-3">
        <% @liked_posts.each do |post_image| %>
          <div>
  <%= link_to post_image_path(post_image.id) do %>
    <%= image_tag post_image.get_image %>
  <% end %>
  <p>タイトル：<%= post_image.title %></p>
  <p>内容：<%= post_image.body %></p>
  <p>コメント数： <%= post_image.post_comments.count %></p>
  <div class=<%= "favorite-" + post_image.id.to_s %> >
  <p><%= render "public/favorites/btn", post_image: post_image %></p>
  </div>
</div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @liked_posts %>
      </div>
    </div>
  </div>
</div>